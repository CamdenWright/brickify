%div#main
  
  %div#form{:class=>"view"}
    %form#config{:action=>"#/view/", :method=>"get"}
      %ul
        %li
          %label{:for => 'url'}
          %strong Image URL:
          %ul
            %li
              %input#url{:type => 'text', :name => "url"}
            %li
              %a{:href=>'http://imgur.com/'} Need to upload your photo?
        %li
          Slider
          %ul
            %li Less detail, fewer bricks
            %li More detail, more bricks
        %li
          %input{:type => 'submit', :value => "Brickify!"}
  
  %hr
  
  %div#view{:class=>"view", :style=>"display: none;"}
    %div
      %h1 Wow, looks great!
      %p Here's your bricked out image.
      %ul#buttons
        %li
          %a#edit-link
            %strong Edit Brick Colors
            %p Tweak your bricked out image with our easy editor.
        %li
          %a#download-link{:href=>"#"}
            %strong Download Instructions
            %p Get a guide for building your brickified image in real life.
    %ul#inventory

    %canvas#iso{:width=>"800", :height => '600'}
    
    .controls
      %a#fit{:href => "#"} Fit
      %a#full{:href => "#"} Full
    #iso_viewer.fit
      %img#out

  %hr
  
  %h1 Brick Editor

  %a#schematic_link{:href => "", :target => '_blank'} Schematic
  
  %table#inventory
    %thead
      %tr
        %th Color
        %th Size
        %th QTY
    %tbody

  %div#edit{:class=>"view", :style=>"display: none;"}
    %canvas#canvas{:width=>"800", :height => '600'}
    %div{:id => "palette"}
    %a#view-link Save and View
    
%a{:href => "#/"} Start Over


%canvas#schematic{:width=>"800", :height => '600'}
